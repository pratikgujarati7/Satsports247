<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeYellow"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:tint="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/chips"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:transitionName="chip_transition" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@null"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/chip_name" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@null"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/chip_value" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_chip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edt_chip_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_border_black"
            android:gravity="center"
            android:padding="@dimen/_3sdp" />

        <EditText
            android:id="@+id/edt_chip_value1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_border_black"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="@dimen/_3sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_chip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

