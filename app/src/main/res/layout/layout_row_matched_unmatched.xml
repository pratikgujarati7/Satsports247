<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_delete"
        android:tint="@color/colorBlack"/>

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toStartOf="@id/tv_type"
        android:layout_toEndOf="@id/iv_delete"
        android:fontFamily="@font/montserrat_regular"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_runs"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_runs"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_odds"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_odds"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_stake"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_stake"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_pl"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_pl"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10sdp" />

</RelativeLayout>